pipeline {
    agent { label 'JDK-17'}
    triggers {
       pollSCM ('* * * * *')
    }
    parameters { 
        choice(name: 'MAVEN-GOALS', 
        choices: ['complie', 'package', 'clean package'],
         description: 'this choice for maven goals') 
         }

    

    stages {
        stage( 'git' ) {
            steps{
                git url :' https://github.com/dhille98/spring-petclinic.git ',
                  branch: 'dev'
            }
        }
        stage('build') {
            steps{
                sh " mvn ${params.MAVEN-GOALS} "
                archiveArtifacts artifacts: '**/spring-petclinic-*.jar'
                junit testResults: '**/TEST-*.xml'
            }
        }

}
}